<Window x:Class="BobMediaPlayer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - BOB MEDIA PLAYER" 
        Height="600" 
        Width="700"
        Background="{StaticResource DarkBackground}"
        WindowStartupLocation="CenterOwner"
        FontFamily="Consolas"
        WindowStyle="None"
        AllowsTransparency="False"
        BorderBrush="{StaticResource DarkBackground}"
        BorderThickness="0"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0"
               Background="{StaticResource DarkSecondary}"
               BorderBrush="Transparent"
               BorderThickness="0"
               Height="40"
               MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid Margin="15,0">
                <TextBlock Text="SETTINGS" 
                          Foreground="{StaticResource AccentColor}"
                          FontSize="11"
                          FontWeight="Bold"
                          FontFamily="Consolas"
                          VerticalAlignment="Center"/>
                <Button Content="X" 
                       Style="{StaticResource ModernButton}"
                       Click="Close_Click"
                       Padding="8,0"
                       FontSize="14"
                       FontFamily="Consolas"
                       Width="32"
                       Height="32"
                       HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Background="{StaticResource DarkBackground}">
            <StackPanel Margin="30,20">
                
                <!-- Playback Settings -->
                <TextBlock Text="PLAYBACK" 
                          Foreground="{StaticResource AccentColor}"
                          FontSize="14"
                          FontWeight="Bold"
                          Margin="0,0,0,15"/>
                
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Default Speed:" 
                              Foreground="{StaticResource TextSecondary}" 
                              VerticalAlignment="Center" Margin="0,0,0,12"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="DefaultSpeedComboBox"
                             Width="150" HorizontalAlignment="Left"
                             Style="{StaticResource TechComboBox}" Margin="0,0,0,12"
                             SelectedIndex="3">
                        <ComboBoxItem Content="0.25x" Tag="0.25" Style="{StaticResource TechComboBoxItem}"/>
                        <ComboBoxItem Content="0.5x" Tag="0.5" Style="{StaticResource TechComboBoxItem}"/>
                        <ComboBoxItem Content="0.75x" Tag="0.75" Style="{StaticResource TechComboBoxItem}"/>
                        <ComboBoxItem Content="1.0x" Tag="1.0" Style="{StaticResource TechComboBoxItem}"/>
                        <ComboBoxItem Content="1.25x" Tag="1.25" Style="{StaticResource TechComboBoxItem}"/>
                        <ComboBoxItem Content="1.5x" Tag="1.5" Style="{StaticResource TechComboBoxItem}"/>
                        <ComboBoxItem Content="2.0x" Tag="2.0" Style="{StaticResource TechComboBoxItem}"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Default Volume:" 
                              Foreground="{StaticResource TextSecondary}" 
                              VerticalAlignment="Center" Margin="0,0,0,12"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,12">
                        <Slider x:Name="DefaultVolumeSlider" Width="200" 
                               Minimum="0" Maximum="100" Value="50"
                               VerticalAlignment="Center"/>
                        <TextBlock x:Name="VolumeValueText" Text="50%" 
                                  Foreground="{StaticResource TextSecondary}"
                                  Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <Border Height="1" Background="{StaticResource BorderColor}" Margin="0,10,0,20"/>

                <!-- Window Settings -->
                <TextBlock Text="WINDOW" 
                          Foreground="{StaticResource AccentColor}"
                          FontSize="14"
                          FontWeight="Bold"
                          Margin="0,0,0,15"/>
                
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Always on top:" 
                              Foreground="{StaticResource TextSecondary}" 
                              VerticalAlignment="Center" Margin="0,0,0,12"/>
                    <CheckBox Grid.Row="0" Grid.Column="1" x:Name="AlwaysOnTopCheckBox" 
                             IsChecked="True" VerticalAlignment="Center" Margin="0,0,0,12"
                             Foreground="{StaticResource TextSecondary}"/>
                </Grid>

                <Border Height="1" Background="{StaticResource BorderColor}" Margin="0,10,0,20"/>

                <!-- Music Player Settings -->
                <TextBlock Text="MUSIC PLAYER" 
                          Foreground="{StaticResource AccentColor}"
                          FontSize="14"
                          FontWeight="Bold"
                          Margin="0,0,0,15"/>
                
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Always on top:" 
                              Foreground="{StaticResource TextSecondary}" 
                              VerticalAlignment="Center" Margin="0,0,0,12"/>
                    <CheckBox Grid.Row="0" Grid.Column="1" x:Name="MusicPlayerAlwaysOnTopCheckBox" 
                             IsChecked="True" VerticalAlignment="Center" Margin="0,0,0,12"
                             Foreground="{StaticResource TextSecondary}"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Show metadata:" 
                              Foreground="{StaticResource TextSecondary}" 
                              VerticalAlignment="Center" Margin="0,0,0,12"/>
                    <CheckBox Grid.Row="1" Grid.Column="1" x:Name="MusicPlayerShowMetadataCheckBox" 
                             IsChecked="True" VerticalAlignment="Center" Margin="0,0,0,12"
                             Foreground="{StaticResource TextSecondary}"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Show album art:" 
                              Foreground="{StaticResource TextSecondary}" 
                              VerticalAlignment="Center" Margin="0,0,0,12"/>
                    <CheckBox Grid.Row="2" Grid.Column="1" x:Name="MusicPlayerShowAlbumArtCheckBox" 
                             IsChecked="True" VerticalAlignment="Center" Margin="0,0,0,12"
                             Foreground="{StaticResource TextSecondary}"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Default volume:" 
                              Foreground="{StaticResource TextSecondary}" 
                              VerticalAlignment="Center" Margin="0,0,0,12"/>
                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,12">
                        <Slider x:Name="MusicPlayerDefaultVolumeSlider" Width="200" 
                               Minimum="0" Maximum="100" Value="50"
                               VerticalAlignment="Center"/>
                        <TextBlock x:Name="MusicVolumeValueText" Text="50%" 
                                  Foreground="{StaticResource TextSecondary}"
                                  Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <Border Height="1" Background="{StaticResource BorderColor}" Margin="0,10,0,20"/>

                <!-- Advanced Settings -->
                <TextBlock Text="ADVANCED" 
                          Foreground="{StaticResource AccentColor}"
                          FontSize="14"
                          FontWeight="Bold"
                          Margin="0,0,0,15"/>
                
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Show OSD messages:" 
                              Foreground="{StaticResource TextSecondary}" 
                              VerticalAlignment="Center" Margin="0,0,0,12"/>
                    <CheckBox Grid.Row="0" Grid.Column="1" x:Name="ShowOSDCheckBox" 
                             IsChecked="True" VerticalAlignment="Center" Margin="0,0,0,12"
                             Foreground="{StaticResource TextSecondary}"/>
                </Grid>

            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Buttons -->
        <Border Grid.Row="2"
               Background="{StaticResource DarkSecondary}"
               BorderBrush="{StaticResource BorderHighlight}"
               BorderThickness="0,2,0,0"
               Padding="30,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="[ RESET TO DEFAULTS ]" 
                       Style="{StaticResource TechButton}"
                       Click="ResetDefaults_Click"
                       Padding="20,11"
                       Margin="0,0,10,0"/>
                <Button Content="[ SAVE ]" 
                       Style="{StaticResource PlayButton}"
                       Click="Save_Click"
                       Padding="30,11"
                       Margin="0,0,10,0"/>
                <Button Content="[ CANCEL ]" 
                       Style="{StaticResource TechButton}"
                       Click="Close_Click"
                       Padding="20,11"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
