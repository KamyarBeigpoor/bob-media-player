<Window x:Class="BobMediaPlayer.AudioPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Now Playing" 
        Icon="icon.ico"
        Height="600" 
        Width="420"
        Background="{StaticResource DarkBackground}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="False"
        BorderBrush="{StaticResource BorderColor}"
        BorderThickness="2">
    
    <Border CornerRadius="0" Background="{StaticResource DarkBackground}" BorderBrush="{StaticResource BorderHighlight}" BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,0,0,20" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="icon.ico" Width="16" Height="16" Margin="0,0,8,0"/>
                    <TextBlock Text="BOB MEDIA PLAYER" 
                              Foreground="{StaticResource AccentColor}"
                              FontSize="11"
                              FontWeight="Bold"
                              FontFamily="Consolas"
                              VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="_" 
                           Style="{StaticResource ModernButton}"
                           Click="Minimize_Click"
                           Padding="8,0"
                           Margin="0,0,8,0"
                           FontSize="16"
                           FontFamily="Consolas"
                           Width="32"
                           Height="32"/>
                    <Button Content="X" 
                           Style="{StaticResource ModernButton}"
                           Click="Close_Click"
                           Padding="8,0"
                           FontSize="14"
                           FontFamily="Consolas"
                           Width="32"
                           Height="32"/>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" 
                   Background="{StaticResource DarkSecondary}"
                   BorderBrush="{StaticResource BorderColor}"
                   BorderThickness="2"
                   CornerRadius="0"
                   Margin="0,0,0,25"
                   Height="240"
                   Width="240">
                <Grid>
                    <Image x:Name="AlbumArtImage" 
                          Stretch="UniformToFill"
                          Visibility="Collapsed"/>
                    <TextBlock x:Name="AlbumArtPlaceholder"
                              Text="â™ª" 
                              FontSize="100" 
                              FontFamily="Segoe UI Symbol"
                              Foreground="{StaticResource BorderColor}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <StackPanel Grid.Row="2" Margin="0,0,0,25">
                <TextBlock x:Name="TrackTitleText" 
                          Text="Unknown Track" 
                          Foreground="{StaticResource TextPrimary}"
                          FontSize="16"
                          FontWeight="SemiBold"
                          FontFamily="Segoe UI"
                          TextAlignment="Center"
                          TextTrimming="CharacterEllipsis"
                          Margin="0,0,0,8"/>
                <TextBlock x:Name="ArtistText" 
                          Text="Unknown Artist" 
                          Foreground="{StaticResource TextSecondary}"
                          FontSize="13"
                          FontFamily="Segoe UI"
                          TextAlignment="Center"
                          TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <Grid Grid.Row="3" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="CurrentTimeText" 
                          Grid.Column="0"
                          Text="00:00" 
                          Foreground="{StaticResource TextSecondary}"
                          VerticalAlignment="Center"
                          Margin="0,0,12,0"
                          FontFamily="Consolas"
                          FontSize="12"/>



                <Slider x:Name="TimelineSlider" 
                       Grid.Column="1"
                       Minimum="0" 
                       Maximum="100"
                       Style="{StaticResource niceslide}"
                       VerticalAlignment="Center"
                       Thumb.DragStarted="TimelineSlider_DragStarted"
                       Thumb.DragCompleted="TimelineSlider_DragCompleted"
                       ValueChanged="TimelineSlider_ValueChanged"
                       PreviewMouseLeftButtonDown="TimelineSlider_MouseDown"/>

                <TextBlock x:Name="TotalTimeText" 
                          Grid.Column="2"
                          Text="00:00" 
                          Foreground="{StaticResource TextSecondary}"
                          VerticalAlignment="Center"
                          Margin="12,0,0,0"
                          FontFamily="Consolas"
                          FontSize="12"/>
            </Grid>




            <StackPanel Grid.Row="4" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0">
                <Button x:Name="PreviousButton" 
                       Content="[ PREVIOUS ]" 
                       Style="{StaticResource TechButton}"
                       Click="Previous_Click"
                       Margin="8"
                       Padding="16,10"
                       FontFamily="Consolas"
                       FontSize="11"/>
                
                <Button x:Name="PlayPauseButton" 
                       Content="[ PLAY ]" 
                       Style="{StaticResource PlayButton}"
                       Click="PlayPause_Click"
                       Margin="8"
                       Padding="20,10"
                       FontFamily="Consolas"
                       FontSize="11"/>
                
                <Button x:Name="NextButton" 
                       Content="[ NEXT ]" 
                       Style="{StaticResource TechButton}"
                       Click="Next_Click"
                       Margin="8"
                       Padding="16,10"
                       FontFamily="Consolas"
                       FontSize="11"/>
            </StackPanel>
            <StackPanel Grid.Row="5" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center">
                <TextBlock Text="VOL" 
                          FontSize="11" 
                          FontFamily="Consolas"
                          FontWeight="Bold"
                          Foreground="{StaticResource TextSecondary}"
                          VerticalAlignment="Center"
                          Margin="0,0,12,0"/>
                <Slider x:Name="VolumeSlider" 
                       Width="180" 
                       Minimum="0" 
                       Maximum="100" 
                       Value="50"
                       VerticalAlignment="Center"
                       ValueChanged="VolumeSlider_ValueChanged"
                       Foreground="{StaticResource AccentColor}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
